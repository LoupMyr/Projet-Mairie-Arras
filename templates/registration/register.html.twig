{% extends 'base.html.twig' %} {% block title %}Register{% endblock %} {% block body %} {% for flashError in app.flashes('verify_email_error') %}
<div class="alert alert-danger" role="alert">{{ flashError }}</div>
{% endfor %}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10 text-primary">
            <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold"> S'inscrire </h1>

            {{ form_start(registrationForm) }} {{ form_row(registrationForm.email) }} {{ form_row(registrationForm.plainPassword,{ label: 'Password' }) }} {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn bg-primary text-white m-4">Register</button> {{ form_end(registrationForm) }}
        </div>
    </div>
</div> {% endblock %}