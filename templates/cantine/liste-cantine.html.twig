{% extends 'base.html.twig' %}

{% block title %}
{{parent()}}Liste des réservations cantine
{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
        Liste des réservations cantine</h1>


    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col">Nom</th>
                            <th scope="col">Prenom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Date de la Réservation</th>
                            <th scope="col">Ecole</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cantine in cantine %}
                        <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                            <td>{{ cantine.nom | capitalize }}</td>
                            <td>{{ cantine.prenom | capitalize }}</td>
                            <td>{{ cantine.email | lower }}</td>
                            <td>{{ cantine.date | date("d-m-Y")}}</td>
                            <td>{{ cantine.ecole | lower }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}